{% if config.plugins.aboutme.enable_item_authorship %}
    {% set src = aboutme_picture_src %}
    {% set author_url = base_url == '' ? '/' : base_url %}
    {% set author = "<a rel='author' class='p-name u-url' href='" ~ author_url ~ "'>" ~ aboutme_name ~ "</a>" %}
    {% if not config.plugins.aboutme.gravatar.enabled %}
	    {% set src = uri.rootUrl(false) ~ (uri.rootUrl(false) == '/' ? '' : '/') ~ aboutme_picture_src %}
    {% endif %}
    <div {% if not config.plugins.aboutme.display_item_authorship %} style="display:none" {% endif %}class="h-card p-author">
        <img class="u-photo" src="{{ src }}" alt="Profile picture" height="40" />&nbsp;&nbsp;{{ "PLUGIN_ABOUTME.PUBLISHED_BY"|t(author) }}
    </div>
{% endif %}
